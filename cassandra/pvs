apiVersion: v1
kind: PersistentVolume
metadata:
  name: sample-pv
  labels:
    pv: sample-pv
spec:
  capacity:
    storage: 1Gi
#  volumeMode: Filesystem
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Delete
#  storageClassName: local-storage
  hostPath:
    path: /test1
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - kube-f801

---
apiVersion: v1
kind: PersistentVolume
